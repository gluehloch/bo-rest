	<build>
		<pluginManagement>
			<plugins>
				<plugin>
					<groupId>org.codehaus.cargo</groupId>
					<artifactId>cargo-maven2-plugin</artifactId>
					<version>1.4.2</version>
				</plugin>
			</plugins>
		</pluginManagement>

		<plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-war-plugin</artifactId>
                <version>3.3.1</version>
            </plugin>            
			<plugin>
				<groupId>org.codehaus.cargo</groupId>
				<artifactId>cargo-maven2-plugin</artifactId>
				<configuration>
					<wait>true</wait>
					<container>
						<containerId>tomcat7x</containerId>
						<type>installed</type>
						<home>${catalina.home}</home>
					</container>
					<configuration>
						<type>existing</type>
						<home>${catalina.home}</home>
						<properties>
							<cargo.tomcat.manager.url>${catalina.manager.url}</cargo.tomcat.manager.url>
							<cargo.remote.username>${catalina.home.user}</cargo.remote.username>
							<cargo.remote.password>${catalina.home.password}</cargo.remote.password>
						</properties>
					</configuration>
					<deployable>
						<groupId>de.winkler.betoffice</groupId>
						<artifactId>betoffice-jweb</artifactId>
						<type>war</type>
						<!-- <version>0.1.0</version> -->
					</deployable>
				</configuration>
